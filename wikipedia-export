#!/bin/bash

#=======================================================================
# $Id$
# Exports all versions of a Wikipedia article as XML.
#
# Newest version available from 
# http://svn.sunbase.org/repos/utils/trunk/wikipedia-export
#
# This complicated piece of software is licensed under the GNU General 
# Public License. Made by Ã˜yvind A. Holm <sunny@sunbase.org>.
#=======================================================================

if [ "$2" = "" ]; then
    echo Syntax: $0 language_prefix \'article_name\'
    exit 1
fi

wget -O "$1.$2.xml" http://$1.wikipedia.org/wiki/Special:Export?action=submit\&pages=$2
