#!/bin/sh

# $Id: view_df,v 1.5 2003/10/02 00:53:19 sunny Exp $

lfile=$HOME/log/df.log

if [ "$1" = "-a" ]; then
	for f in `cat ~/log/.disks`; do
		view_df $f $2
	done
	exit 0
fi

if [ "$2" != "" ]; then
	deep $lfile | grep $1 | tr '\t' ' ' | tr -s ' ' | cut -d ' ' -f 1,5 | unik_df | tail -$2 | ep >~/log/data
else
	deep $lfile | grep $1 | tr '\t' ' ' | tr -s ' ' | cut -d ' ' -f 1,5 | unik_df | ep >~/log/data
fi

cd ~/log
df -h $1 | grep $1 >~/log/data.title
statplot
