#!/bin/bash

#=======================================================================
# $Id$
# Latskap.
#=======================================================================

if [ "$1" = "-v" ]; then
    iwlist ath0 scan | less
elif [ "$1" = "-e" ]; then
    iwlist ath0 scan | egrep '(Address:|ESSID:|Quality=|Encryption)'
else
    wlanconfig ath0 list scan
fi
