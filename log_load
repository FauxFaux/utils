#!/bin/sh

# $Id: log_load,v 1.2 2003/10/03 00:28:13 sunny Exp $
# Logger maskinload til ~/log/load.log

logdir=$HOME/log

[ -d $logdir ] || mkdir -p logdir || { echo "mkdir $logdir: PÃ¥ trynet" >&2, exit 1; }

lockname=$logdir/load.log.LOCK

until mkdir $lockname 2>/dev/null; do
	echo $0: $lockname: Lockdir finnes, avbryter. >&2
	exit 1
done

(echo -n "`date -u +"%Y-%m-%dT%H:%M:%SZ"` "; cat /proc/loadavg) >>$logdir/load.log

rmdir $lockname
