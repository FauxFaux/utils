#!/bin/sh

# $Id$
# Lister ut alle directoryene og sorterer dem etter stÃ¸rrelse

DUFILE=du.dat

echo \# `suuid -t upd -w eo -c "~/bin/upd in $(hostname):$(/bin/pwd)"` >$DUFILE
du -kx | sort -n | perl -e 'while (<>) { s/^(\d{3,})/commify($1)/ge; print; } sub commify { my $Str = reverse $_[0]; $Str =~ s/(\d\d\d)(?=\d)(?!\d*\,)/$1\./g; return scalar reverse $Str; }' >>$DUFILE
echo -n "# smsum:" >>$DUFILE
echo `smsum <$DUFILE` >>$DUFILE
chmod 600 $DUFILE
chown sunny.sunny $DUFILE
rm -f $DUFILE.gz
afv $DUFILE
tail -n 200 $DUFILE
